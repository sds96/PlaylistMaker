<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_track_search_item"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/artwork"
        style="@style/artworkStyle"
        android:contentDescription="@null">
    </ImageView>

    <LinearLayout
        style="@style/searchTrackInfoBox">
        <TextView
            android:id="@+id/trackName"
            style="@style/searchTrackNameStyle"
            tools:text="TrackName">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/artistName"
                style="@style/searchTrackSubInfoStyle"
                tools:text="SingerName">
            </TextView>
            <ImageView
                android:id="@+id/dotImgInfo"
                style="@style/searchTrackSubInfoDotStyle"
                android:src="@drawable/dot"
                android:contentDescription="@null">
            </ImageView>
            <TextView
                android:id="@+id/trackTime"
                style="@style/searchTrackSubInfoStyle"
                tools:text="3:00">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/search_track_arrow"
        style="@style/searchTrackArrowStyle"
        android:src="@drawable/arrow_forward"
        android:contentDescription="@null">
    </ImageView>
</FrameLayout>