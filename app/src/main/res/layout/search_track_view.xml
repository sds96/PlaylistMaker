<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_track_search_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/artwork"
        android:contentDescription="@null"
        android:layout_weight="0"
        android:layout_width="@dimen/artwork_search_size"
        android:layout_height="@dimen/artwork_search_size"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="12dp">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"> <!-- 64 44 dp -->
        <TextView
            android:id="@+id/trackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/searchTrackNameStyle"
            tools:text="TrackName">
        </TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/artistName"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/searchTrackSubInfoStyle"
                tools:text="SingerName">
            </TextView>
            <ImageView
                android:id="@+id/dotImgInfo"
                android:contentDescription="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/dot"
                app:tint="?attr/colorOnSecondary">
            </ImageView>
            <TextView
                android:id="@+id/trackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                style="@style/searchTrackSubInfoStyle"
                tools:text="3:00">
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/search_track_arrow"
        android:contentDescription="@null"
        android:layout_weight="0"
        android:layout_width="@dimen/size_square_icon_base"
        android:layout_height="@dimen/size_square_icon_base"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="12dp"
        android:src="@drawable/arrow_forward"
        app:tint="?attr/colorOnSecondary">
    </ImageView>
</LinearLayout>